<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cactus+Classical+Serif&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/styles.css" />
    <title>Teams</title>
  </head>
  <body>
    <%- include('navBar'); %>
    <div class="container">
      <div class="content">
        <div class="list-container">
          <% if (locals.teams) { %>
          <h1>Teams</h1>
          <% for (const team of teams) { %>
          <ul>
            <li>
              <a class="team" href="/team/<%= team.teamid %>"
                ><%= team.teamname %></a
              >
              <a class="edit" href="/team/edit/<%= team.teamid %>"
                ><i class="fa-solid fa-pen-to-square"></i
              ></a>
              <a class="delete" href="/team/delete/<%= team.teamid %>"
                ><i class="fa-solid fa-trash"></i
              ></a>
            </li>
          </ul>
          <% } %> <% } %>
        </div>
        <a class="add-team" href="/team/new">Add team</a>
      </div>
    </div>
  </body>
  <footer>
    Photo by
    <a
      href="https://unsplash.com/@fancycrave?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash"
      >Fancy Crave</a
    >
    on
    <a
      href="https://unsplash.com/photos/people-watching-soccer-arena-qowyMze7jqg?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash"
      >Unsplash</a
    >
  </footer>
</html>
